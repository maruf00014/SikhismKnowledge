            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruHarkrishanJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Harkrishan Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruTegBahadurJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Teg Bahadur Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruGobindSinghJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Gobind Singh Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>
