<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/SriGuruNanakDevJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Nanak Dev Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruAngadDevJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Angad Dev Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruAmardasJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Amardas Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruRamDaasJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Ram Daas Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruArjanDevJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Arjan Dev Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruHargobindSahibJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sri Guru Hargobind Sahib Ji"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SriGuruHarRaiJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
