<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.sikhismknowledge.sikhismknowledge.Gurbani"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/alarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set alarm"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/JapjiSahibPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Japji Sahib – Punjabi and English"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/ShabadHazaarePunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Shabad Hazaare – Punjabi"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/JaapSahibPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Jaap Sahib – Punjabi "
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/TavParsaadSavaiyeePunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Tav Parsaad Savaiyee – Punjabi"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/AnandSahibPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Anand Sahib - Punjabi and English"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/RehraasSahibPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Rehraas Sahib - Punjabi and English"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/KirtanSohilaPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Kirtan Sohila - Punjabi and English"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/BarahmaahaPunjabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="Barahmaaha – Punjabi and English"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

</ScrollView>
